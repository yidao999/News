<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="news_summary_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FAFAFA"
    app:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/news_photo"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/news_photo"
            android:lines="2"
            android:textColor="#de000000"
            android:textSize="18sp"
            tools:text="习近平:吹响建设科技强国号角国号角国号角" />

        <TextView
            android:id="@+id/news_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/news_photo"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#8a000000"
            android:textSize="14sp"
            tools:text="科技是国之利器，中国人民生活要好，必须有强大科技。" />

        <TextView
            android:id="@+id/news_tvtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_desc"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:textColor="#8a000000"
            android:textSize="12sp"
            tools:text="05-28 20:09" />

    </RelativeLayout>


</android.support.v7.widget.CardView>